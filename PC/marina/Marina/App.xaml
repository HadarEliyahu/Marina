<Application x:Class="Marina.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MarinaLauncher.xaml">
    
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="styles/Colors.xaml"/>
                <ResourceDictionary Source="styles/Buttons.xaml"/>
                <ResourceDictionary Source="styles/Messages.xaml"/>
                <ResourceDictionary Source="styles/TextBoxes.xaml"/>
                <ResourceDictionary Source="styles/TextBlocks.xaml"/>
                <ResourceDictionary Source="styles/Menu.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
            <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">7</sys:Double>
            <FontFamily x:Key="Century Gothic">pack://application:,,,/fonts/Century Gothic</FontFamily>
        </ResourceDictionary>

        
    </Application.Resources>
    
</Application>
